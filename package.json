  "bugs": {
    "url": "https://github.com/yurikrupnik/react-bo/issues"
  },
  "homepage": "https://github.com/yurikrupnik/react-bo#readme",
  "dependencies": {
    "koa": "^2.5.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.2",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {

{
  "name": "react-bo",
  "version": "1.0.0",
  "description": "react-bo",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run start:client & npm run start:server",
    "start:client": "webpack-serve --config webpack.config.serve.js",
    "start:server": "babel-watch src/index.js",
    "clean": "rimraf dist/",
    "build": "npm run clean && npm run build:server & npm run build:client",
    "build:server": "webpack --config webpack.config.server.js",
    "build:client": "webpack --config webpack.config.client.js",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "eslint src/index.js",
    "lint:client": "eslint src/client.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yurikrupnik/react-bo.git"
